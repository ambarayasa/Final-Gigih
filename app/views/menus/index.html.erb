<h1> List of Menus </h1>
<table>
  <thead>
    <tr>
        <td><b>Name</b></td>
        <td><b>Description</b></td>
        <td><b>Price</b></td>
        <td><b>Category</b></td>
        <td><b>Action</b></td>
    </tr>
  </thead>
  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.name %></td>
        <td><%= menu.description %></td>
        <td><%= menu.price %></td>
        <td><%= menu.category.name %></td>
        <td><%= link_to "Show", menu_path(menu) %></td>
        <td><%= link_to "Edit", edit_menu_path(menu) %></td>
        <td><%= button_to "Delete", menu, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<a href="/menus/new">New Menu</a>