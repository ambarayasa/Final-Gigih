<h1> List of Categories </h1>
<table>
  <thead>
    <tr>
        <td><b>Name</b></td>
        <td><b>Action</b></td>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to "Show", category_path(category) %></td>
        <td><%= link_to "Edit", edit_category_path(category) %></td>
        <td><%= button_to "Delete", category, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<a href="/categories/new">New Menu</a>